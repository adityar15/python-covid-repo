import plotly.express as px
import pandas as pd
import dash
import dash_core_components as dcc
import dash_html_components as html

## Creating the graphs
confirmed = pd.read_csv("confirmed_country_month.csv") # change path
conf_line = px.line(data_frame=confirmed, x = 'Year-Month', y = 'Case',
    title = 'Confirmed Cases by Month', color = 'Country/Region')

## Web App Contents
app = dash.Dash(__name__)
app.layout = html.Div(children=[
    # Title
    html.H1('Confirmed COVID Cases Time Series'),
    # Confirmed Case Line Graph
    html.Div(dcc.Graph(id = 'line_graph', figure = conf_line)),
    # Creating Dropdown
])



if __name__ == '__main__':
    app.run_server(debug=False)

